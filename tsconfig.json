{
    "compilerOptions": {
        "module":"esnext",
        "noImplicitAny": true,
        "sourceMap": true,
        "isolatedModules": true,
        "jsx":"react",
        "allowJs":true,
        "target":"es6",
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "downlevelIteration":true,
        "moduleResolution": "node",  
         "rootDir": "src",
        "baseUrl": ".", 
         "paths": {
              "@js/*": ["./src/js/*"],
              "@css/*": ["./src/css/*"]
         },
        "lib": ["es2015","dom"],
        "types":["node"],
         "typeRoots" : ["./typings"]
     },
      "exclude": [
        "node_modules",
        "**/*.spec.ts"
      ]
    
    
}